shipname=libisl
shipname_=isl
shipversion=0.11.1
shipsources="http://www.kotnet.org/~skimo/${shipname_}/${shipname_}-${shipversion}.tar.bz2 hacks_to_compile_libisl.patch"

build() {
	msg "This does not work!"
	return 1
	
	cd ${shipname_}-${shipversion}
		
	extra_cflags="-I$HSCT_INCLUDE_DIR -L$HSCT_LIB_DIR"
	
	# This will somehow compile it but the HelenOS source tree
	# must be patched with the hacks_to_compile_libisl.patch file.
	run ./configure \
		--disable-shared \
		--host="$HSCT_GNU_TARGET" \
		CC="$HSCT_CC" \
		CFLAGS="$HSCT_CFLAGS $HSCT_LDFLAGS_FOR_CC $extra_cflags" \
		LD="$HSCT_LD" \
		STRIP="$HSCT_STRIP" \
		AR="$HSCT_AR" \
		OBJDUMP="$HSCT_OBJDUMP" \
		NM="$HSCT_NM" \
		RANLIB="$HSCT_RANLIB"
}

package() {
	msg "Not implemented!"
}

dist() {
	msg "Not implemented!"
}

