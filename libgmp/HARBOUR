ptname=libgmp
ptsources="ftp://ftp.gmplib.org/pub/gmp-5.1.0/gmp-5.1.0.tar.bz2 gmp-h.patch"

build() {
	tar xjf gmp-5.1.0.tar.bz2 || return 1
	patch -p0 <gmp-h.patch || return 1
	cd gmp-5.1.0 || return 1
	hsct_run_echo ./configure \
		--disable-shared \
		--host="$HSCT_GNU_TARGET" \
		CC="$HSCT_CC" \
		CFLAGS="$HSCT_CFLAGS $HSCT_LDFLAGS_FOR_CC -D_STDIO_H -DHAVE_STRCHR -Wl,--undefined=longjmp" \
		LD="$HSCT_LD" \
		|| return 1
	
	hsct_info "Building the library..."
	make || return 1
	hsct_info "Building the tests..."
	make check || return 0
}

package() {
	cd gmp-5.1.0 || return 1
	make install DESTDIR=$PWD/PKG || return 1
	
	# Copy the headers and static library
	cp PKG/usr/local/include/gmp.h "$HSCT_INCLUDE_DIR/" || return 1
	cp PKG/usr/local/lib/libgmp.a "$HSCT_LIB_DIR/" || return 1
	
	# Copy the tests
	(
		mkdir -p "$HSCT_MISC_DIR/libgmp/"
		cd tests || return 1
		echo "echo Running libgmp tests..." >"$HSCT_MISC_DIR/libgmp/run_tests.bdsh"
		find . -executable -type f | while read testname; do
			cp "$testname" "$HSCT_MISC_DIR/libgmp/$testname" || exit 1
			echo "$testname" | sed 's#./##' >>"$HSCT_MISC_DIR/libgmp/run_tests.bdsh"
		done || exit 1
	) || return 1
}

dist() {
	hsct_info "Not implemented!"
}

