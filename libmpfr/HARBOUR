shipname=libmpfr
shipsources="http://www.mpfr.org/mpfr-current/mpfr-3.1.1.tar.bz2"

build() {
	tar xjf mpfr-3.1.1.tar.bz2 || return 1
	cd mpfr-3.1.1 || return 1
	
	# Pretend we have something we really do not have
	extra_cflags="-DCHAR_BIT=8 -D_MPFR_H_HAVE_FILE -D_MPFR_H_HAVE_INTMAX_T"
	
	# Use the not-that-precise constants from float.h
	extra_cflags="$extra_cflags -DFLOAT_H_YES_I_REALLY_WANT_LIMITS"
	
	# Where libgmp is supposed to be residing
	extra_cflags="$extra_cflags -I$HSCT_INCLUDE_DIR -L$HSCT_LIB_DIR"
	
	hsct_run_echo ./configure \
		--disable-shared \
		--host="$HSCT_GNU_TARGET" \
            	CC="$HSCT_CC" \
		CFLAGS="$HSCT_CFLAGS $HSCT_LDFLAGS_FOR_CC $extra_cflags" \
		LD="$HSCT_LD" \
		|| return 1
	
	hsct_info "Building the library..."
	make || return 1
	hsct_info "Building the tests..."
	make check || return 0
}

package() {
	cd mpfr-3.1.1 || return 1
	make install DESTDIR=$PWD/PKG || return 1
	
	# Copy the headers and static library
	cp PKG/usr/local/include/*.h "$HSCT_INCLUDE_DIR/" || return 1
	cp PKG/usr/local/lib/*.a "$HSCT_LIB_DIR/" || return 1
	
	# Copy the tests
	(
		mkdir -p "$HSCT_MISC_DIR/libmpfr/"
		cd tests || return 1
		cp *.dat* "$HSCT_MISC_DIR/libmpfr/"
		echo "echo Running libmpfr tests..." >"$HSCT_MISC_DIR/libmpfr/run_tests.bdsh"
		find . -executable -type f | while read testname; do
			cp "$testname" "$HSCT_MISC_DIR/libmpfr/$testname" || exit 1
			echo "$testname" | sed 's#./##' >>"$HSCT_MISC_DIR/libmpfr/run_tests.bdsh"
		done || exit 1		
	) || return 1
}

dist() {
	hsct_info "Not implemented!"
}

